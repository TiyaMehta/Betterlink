<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".WelcomePage">

    <ImageView
        android:id="@+id/redBox"
        android:layout_width="619dp"
        android:layout_height="670dp"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="392dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/red_box"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/whiteBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="166dp"
        android:layout_marginLeft="166dp"
        android:layout_marginTop="238dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/redBox"
        app:srcCompat="@drawable/white_box"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/wlcm_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/whiteBox"
        app:layout_constraintEnd_toStartOf="@+id/whiteBox"
        app:srcCompat="@drawable/welcome_dots"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/cnt_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/whiteBox"
        app:srcCompat="@drawable/continue_arrow"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/wlcm_dr_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dr_pic"
        android:layout_marginRight="50dp"
        android:layout_marginTop="-15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/wlcm_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/betterlink"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/cnt_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Continue"
        android:textColor="#000"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/cnt_arrow"
        app:layout_constraintTop_toTopOf="@id/whiteBox" />

    <TextView
        android:id="@+id/wlcm_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Welcome"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="100dp"
        app:layout_constraintTop_toTopOf="@id/redBox"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/wlcm_body"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/wlcm_app"
        android:textColor="#fff"
        android:textSize="15dp"
        android:justificationMode="inter_word"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/wlcm_txt"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>