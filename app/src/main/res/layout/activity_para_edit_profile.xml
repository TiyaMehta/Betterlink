<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#fff"
    tools:context=".para_editProfile">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.BetterLink.AppBarOverlay">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Edit Profile"
            app:popupTheme="@style/Theme.BetterLink.PopupOverlay">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/user_bg"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/user_bg" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            app:srcCompat="@drawable/profile" />

        <ImageView
            android:id="@+id/profile_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-30dp"
            app:srcCompat="@drawable/profile_add" />

        <EditText
            android:id="@+id/para_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/grey_btn"
            android:ems="10"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:text=""
            android:textColorHint="#5D5D5D"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/para_emailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/grey_btn"
            android:ems="10"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Email id"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:text=""
            android:textColorHint="#5D5D5D"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/para_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/grey_btn"
            android:ems="10"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:text=""
            android:textColorHint="#5D5D5D"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/para_contact2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/grey_btn"
            android:ems="10"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Phone number"
            android:inputType="phone"
            android:paddingLeft="30dp"
            android:text=""
            android:textColorHint="#5D5D5D"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/para_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/grey_btn"
            android:ems="10"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:text=""
            android:gravity="start|top"
            android:textColorHint="#5D5D5D"
            android:textSize="20dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/para_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/grey_btn"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/para_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_btn"
                android:layout_margin="10dp"

                android:layout_weight="1" />
        </LinearLayout>
        <EditText
            android:id="@+id/para_licenseNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_btn"
            android:ems="10"
            android:fontFamily="@font/poppins_semibold"
            android:hint="License number"
            android:inputType="phone"
            android:paddingLeft="30dp"
            android:text=""
            android:textColorHint="#5D5D5D"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/para_qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/grey_btn"
            android:ems="10"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="start|top"
            android:hint="Qualification"
            android:inputType="textMultiLine"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColorHint="#5D5D5D"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/para_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/grey_btn"
            android:ems="10"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Yrs. of Experience"
            android:inputType="phone"
            android:paddingLeft="30dp"
            android:text=""
            android:textColorHint="#5D5D5D"
            android:textSize="20dp" />

        <Button
            android:id="@+id/para_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/red_btn"
            android:fontFamily="@font/poppins_semibold"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="30dp" />
    </LinearLayout>
    </ScrollView>


</LinearLayout>