<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Registration">

    <ImageView
        android:id="@+id/reg_redBox"
        android:layout_width="593dp"
        android:layout_height="642dp"
        android:layout_marginBottom="590dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/red_box"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/reg_4_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/__dots"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/reg_dots"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toBottomOf="@+id/reg_redBox"
        app:layout_constraintEnd_toEndOf="@id/reg_redBox"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/reg_dots"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/reg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Registration"
        android:textColor="#fff"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_redBox">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:id="@+id/sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#000"
                android:textSize="17dp"
                android:layout_marginRight="15dp"
                android:text="Sign In"
                android:gravity="end" />

            <ImageView
                android:id="@+id/user_bg"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/user_bg" />

            <ImageView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-80dp"
                app:srcCompat="@drawable/profile" />

            <ImageView
                android:id="@+id/profile_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-30dp"
                app:srcCompat="@drawable/profile_add" />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:hint="Name"
                android:textColorHint="#5D5D5D"
                android:paddingLeft="30dp"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="20dp"
                android:background="@drawable/grey_btn" />

            <EditText
                android:id="@+id/email_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/grey_btn"
                android:ems="10"
                android:fontFamily="@font/poppins_semibold"
                android:hint="Email id"
                android:inputType="textPersonName"
                android:paddingLeft="30dp"
                android:text=""
                android:textColorHint="#5D5D5D"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/pasw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/grey_btn"
                android:ems="10"
                android:fontFamily="@font/poppins_semibold"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="30dp"
                android:text=""
                android:textColorHint="#5D5D5D"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/grey_btn"
                android:ems="10"
                android:fontFamily="@font/poppins_semibold"
                android:hint="Phone number"
                android:inputType="phone"
                android:paddingLeft="30dp"
                android:text=""
                android:textColorHint="#5D5D5D"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/grey_btn"
                android:ems="10"
                android:fontFamily="@font/poppins_semibold"
                android:hint="Address"
                android:inputType="textMultiLine"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text=""
                android:gravity="start|top"
                android:textColorHint="#5D5D5D"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/grey_btn"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_btn"
                    android:layout_margin="10dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:id="@+id/reg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/red_btn"
                android:fontFamily="@font/poppins_semibold"
                android:text="Register"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_marginTop="30dp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>