<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".rec_viewForm">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.BetterLink.AppBarOverlay">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Patient Form"
            app:popupTheme="@style/Theme.BetterLink.PopupOverlay">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <EditText
        android:id="@+id/patientCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="55dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:background="@drawable/grey_btn"
        android:hint="Patient Condition"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="#000"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/tempSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:background="@drawable/grey_btn"
        android:hint="Temperature Sensor"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="#000"
        android:text="" />

    <EditText
        android:id="@+id/ecgSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/grey_btn"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:hint="ECG Sensor"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:text=""
        android:textColor="#000"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/heartSesnor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/grey_btn"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:hint="Heart Sensor"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:text=""
        android:textColor="#000"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/pulseSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/grey_btn"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:hint="Pulse Oximiter Sensor"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:text=""
        android:textColor="#000"
        android:textSize="16dp" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
    android:orientation="horizontal">
        <Button
            android:id="@+id/yesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_btn"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Yes" />
        <Button
            android:id="@+id/noBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_btn"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="No" />
</LinearLayout>
</LinearLayout>